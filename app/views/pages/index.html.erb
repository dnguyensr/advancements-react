<div class="contaier">
  <div class="row">
    <div class="col-12 col-sm-6 offset-sm-3 col-md-4 offset-md-4">
      <% if current_user %>
        <h1>Logged In</h1>
        <ul class="list-group badge-list">
          <% @badges.each do |badge| %>
          <% if current_user.merit_badges.include?(badge) %>
          <li data-id="<%= badge.id %>" data-complete="true" class="list-group-item mbadge active"><%= badge.name %></li>
          <% else %>
          <li data-id="<%= badge.id %>" data-complete="false" class="list-group-item mbadge"><%= badge.name %></li>
          <% end %>
          <% end %>
        </ul>
      <% else %>
        <h1>Not Logged in</h1>
        <ul class="list-group">
          <% @badges.each do |badge| %>
            <li data-id="<%= badge.id %>" class="list-group-item mbadge"><%= badge.name %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
